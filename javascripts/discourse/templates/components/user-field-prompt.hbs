{{#if currentUser}}
  <div class="user-field-prompt">
    <div class="fields-container">
      {{#each fields as |field|}}
        {{user-field field=field.userField value=field.value}}
      {{/each}}
    </div>

    <div class="actions">
      {{d-button
        class="btn-primary save-changes"
        action=(action "submitUserFields")
        label="save"
        isLoading=isSaving
      }}
    </div>
  </div>
{{/if}}
